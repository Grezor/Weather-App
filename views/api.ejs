<%- include('partials/header') %>
<h1>Meteo 7 jours</h1>
<div class="container mx-auto">
  <form class="w-full max-w-sm" action="/" method="post">
    <div class="autocomplete" data-type="sevenday">
      <label>
        <input type="text" name="city" class="autocomplete-input mt-auto  focus:border-purple-500"
          placeholder="exemple : Lille">
      </label>
      <button
        class="flex-shrink-0 bg-teal-500  hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-indigo-600 py-1 px-2 rounded"
        type="submit">
        Validation
      </button>
      <button
        class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-indigo-600 font-bold py-2 px-4 rounded"
        type="submit">
        Valider
      </button>

      <section class="autocomplete-results hidden">
      </section>
    </div>


  </form>
  <div class="container mt-6">


    <% if(weather !== null){ %>

    <div class="grid grid-cols-3 gap-4 ">
      <% for (let i = 0; i < weather.dailies.length; i++) { %>
      <%= weather.req %>
      <style>
        img {
          max-width: 100%;
          height: auto;
        }
      </style>
      <div class="max-w p-6 h-auto rounded overflow-hidden border-t border-l border-r border-b bg-gray-400">
        <img src="<%= weather.dailies[i].icon %>" alt="" />
        <h3></h3>
        <div class="px-6 py-4">
          <div class="uppercase text-indigo-600 font-bold text-xl mb-2"><%= weather.dailies[i].dt %></div>
          <div class="uppercase text-indigo-600 font-bold text-xl mb-2"><%= weather.dailies[i].main %></div>
          
        </div>
        <div class="px-2">
          <div class="flex -mx-2">
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].min %></h1>
                <span
                  class="">Min</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].max %></h1>
                <span
                  class="">Max</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].tempDays %></h1>
                <span
                  class="">jour</span>
              </div>
            </div>
          </div>
        </div>

        <div class="px-2">
          <div class="flex -mx-2">
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"> <%= weather.dailies[i].night %></h1>
                <span
                  class="">night</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].eve %></h1>
                <span
                  class="">eve</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].morn %></h1>
                <span
                  class="">morn</span>
              </div>
            </div>
          </div>
        </div>

        <div class="px-2">
          <div class="flex -mx-2">
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].feels_like_day %></h1>
                <span
                  class="">temp
                  jour</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].feels_like_eve %></h1>
                <span
                  class="">temp
                  soir</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].feels_like_night %></h1>
                <span
                  class="">temp
                  nuit</span>
              </div>
            </div>
          </div>
        </div>

        <div class="px-2">
          <div class="flex -mx-2">
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"> <%= weather.dailies[i].feels_like_morn %></h1>
                <span
                  class="">matin</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"> <%= weather.dailies[i].humidity %></h1>
                <span
                  class="">Humidity</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].wind_speed %>%</h1>
                <span
                  class="">vent</span>
              </div>
            </div>
          </div>
        </div>

        <div class="px-2 ">
          <div class="flex -mx-2 ">
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].pop %></h1>
                <span class=""> Proba pr√©cipitations</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].sunrise %></h1>
                <span class="">sunrise</span>
              </div>
            </div>
            <div class="w-1/3 px-2">
              <div class="h-16">
                <h1 class="text-center"><%= weather.dailies[i].sunset %></h1>
                <span class="">sunset</span>
              </div>
            </div>
          </div>
        </div>

      </div>


      <% } %>
    </div>
    <% } %>
  </div>

  </body>

  </html>