<%- include('partials/header') %>
<div class="container">
  <form class="w-full max-w-sm" action="/" method="post">
      <div class="autocomplete" data-type="oneday">
        <label>
            <input type="text" name="city" class="autocomplete-input mt-auto  focus:border-purple-500" placeholder="exemple : Lille">
          </label>
            <button
            class="flex-shrink-0 bg-teal-500  hover:bg-teal-700 border-teal-500 hover:border-teal-700 text-sm border-4 text-white py-1 px-2 rounded"
            type="submit">
            Validation
          </button>
          <button class="shadow bg-purple-500 hover:bg-purple-400 focus:shadow-outline focus:outline-none text-white font-bold py-2 px-4 rounded" type="submit">
            Valider
          </button>

        <section class="autocomplete-results hidden">
        </section>
      </div>
     
  
  </form>
  <div class="relative container mt-5">
    <% if(weather !== null){ %>
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
      <div class="flex flex-wrap w-full lg:w-auto">
        <div class="w-full lg:w-1/2 flex rounded-lg border-2 bg-indigo-600">
          <div class="rounded-lg py-6 pl-8 pr-32 w-full text-black bg-grey-light">
            <div class="mb-10">
              <h2 class="font-bold text-white text-4xl leading-none pb-1"><%= weather.name %></h2>
              <span class="inline-block mr-2">Latitude <%= weather.lon %></span>
            <span class="inline-block  mr-2">Longitude <%= weather.lat %></span>
            </div>
            <div>
              <img class="image mb-2" src="<%= weather.icon %>" alt="">
              <strong class="leading-none text-6xl block text-white"><%= weather.temp %>°C</strong>
              <b class="text-2xl text-gray-200 block font-bold"><%= weather.description %></b>
            </div>
          </div>
        </div>

        <div class="w-full lg:w-1/2 flex border-r border-b border-l border-gray-400 lg:border-l-0 lg:border-t lg:border-gray-400 bg-white rounded-b lg:rounded-b-none lg:rounded-r p-4 flex flex-col justify-between leading-normal">
          <div class="lg:my-3 text-dark p-8 lg:rounded-r-lg w-full">
            <div class="flex justify-between w-64 mb-4 w-full">
              <div class="w-auto font-bold text-indigo-600">Precipitation</div>
              <div class="w-auto font-extrabold text-right"><%= weather.pressure %></div>
            </div>
            <div class="flex justify-between w-64 mb-4 w-full">
              <div class="w-auto font-bold text-indigo-600">Humidity</div>
              <div class="w-auto font-extrabold text-right"><%= weather.humidity %> %</div>
            </div>
            <div class="flex justify-between w-64 mb-4 w-full">
              <div class="w-auto font-bold text-indigo-600">Vent</div>
              <div class="w-auto font-extrabold text-right"><%= weather.speed %> km/h</div>
            </div>
            <div class="flex justify-between w-64 mb-8 w-full">
              <div class="w-auto font-bold text-indigo-600">Nuage</div>
              <div class="w-auto font-extrabold text-right"><%= weather.clouds %> %</div>
            </div>

            <div class="flex flex-row">
              <div class="flex flex-col w-1/4 border-solid border-2 border-indigo-600 rounded-lg mr-2">
                <div class="text-center">
                  <b class="font-medium text-indigo-600">Min</b><br>
                  <strong class="text-xl"><%= weather.temp_min %></strong>
                </div>
              </div>

              <div class="flex flex-col w-1/4 border-solid border-2 border-indigo-600 rounded-lg mr-2">
                <div class="text-center">
                  <b class="font-medium text-indigo-600">max</b><br>
                  <strong class="text-xl"><%= weather.temp_max %></strong>
                </div>
              </div>

              <div class="flex flex-col w-1/4 border-solid border-2 border-indigo-600 rounded-lg mr-2">
                <div class="text-center">
                  <b class="font-medium text-indigo-600">Levée</b><br>
                  <strong class="text-xl"><%= weather.sunrise %></strong>
                </div>
              </div>

              <div class="flex flex-col w-1/4 border-solid border-2 border-indigo-600 rounded-lg mr-2">
                <div class="text-center">
                  <b class="font-medium text-indigo-600 ">Coucher</b><br>
                  <strong class="text-xl"><%= weather.sunset %></strong>
                </div>
              </div>
              
            </div>
          </div>
        </div>
      </div>
    </div>
    <% } %>
  </div>
</div>

</div>